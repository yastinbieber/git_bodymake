            </div>
            <div class="user-info">
              <span class="user-name">
                <%= current_user.username %>
              </span>
            </div>
          </div>
          <!-- sidebar-header  -->
          <div class="sidebar-search">
            <div>
              <div class="input-group">
                <input type="text" class="form-control search-menu" placeholder="Search...">
                <div class="input-group-append">
                  <span class="input-group-text">
                    <i class="fa fa-search" aria-hidden="true"></i>
                  </span>
                </div>
              </div>
            </div>
          </div>
          <!-- sidebar-search  -->
          <div class="sidebar-menu">
            <ul>
              <li class="header-menu">
                <span>Free</span>
              </li>
              <li class="sidebar-dropdown">
                <%= link_to "" do %>
                  <i class="fa fa-tachometer-alt"></i>
                  <span>Dashboard</span>
                  <span class="badge badge-pill badge-warning">Check</span>
                <% end %>
              </li>
              <li class="sidebar-dropdown">
                <%= link_to user_path(current_user) do %>
                  <i class="fa fa-tachometer-alt"></i>
                  <span>Userpage</span>
                <% end %>
              </li>
              <!--Training-diari,food-diaryは有料会員3のときは消す-->
              <li class="sidebar-dropdown">
                <%= link_to "/workoutmenus" do %>
                  <i class="far fa-gem"></i>
                  <span>Training-diary</span>
                <% end %>
              </li>
              <li class="sidebar-dropdown">
                <%= link_to "/fooddiaries" do %>
                  <i class="fa fa-chart-line"></i>
                  <span>Food-diary</span>
                <% end %>
              </li>
              <li class="sidebar-dropdown">
                <%= link_to "/advicediaries" do %>
                  <i class="fa fa-globe"></i>
                  <span>Training-advice</span>
                <% end %>
              </li>
              <li class="header-menu">
                <!--会員種別とかそのへんを出したい-->
                <span>Status</span>
              </li>
              <li>
                <a href="#">
                  <i class="fa fa-calendar"></i>
                  <span>Upgrade</span>
                </a>
              </li>
              <li>
                <a href="#">
                  <i class="fa fa-folder"></i>
                  <span>Examples</span>
                </a>
              </li>
            </ul>
          </div>
          <!-- sidebar-menu  -->
        </div>
         <!--sidebar-content-->
        <div class="sidebar-footer">
          <li>
            <%= link_to "LogOut", destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
        </div>
        <% else %>
        <nav class="navbar navbar-expand-lg navbar-light bg-primary">
          <a class="navbar-brand" href="#">TOREKA</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <%= link_to new_user_session_path, class: "nav-link" do %>
                  <span>Sign-In</span>
                  <span class="sr-only">(current)</span>
                <% end %>
              </li>
              <li class="nav-item active">
                <%= link_to new_user_registration_path, class: "nav-link" do %>
                  <span>Sign-Up</span>
                  <span class="sr-only">(current)</span>
                <% end %>
              </li>
            </ul>
          </div>
        </nav>
        <% end %>
      </nav>
