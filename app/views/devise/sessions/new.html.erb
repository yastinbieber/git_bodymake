<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="card">
        <h2 class="card-header">Log in</h2>
        <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "bmd-label-floating" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: "bmd-label-floating" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %><br>
          </div>
          <% if devise_mapping.rememberable? %>
            <!--<div class="checkbox">-->
            <!--  <%= f.check_box :remember_me %>-->
            <!--  <%= f.label :remember_me %>-->
            <!--</div>-->
            <div class="checkbox">
              <label>
                <input type="checkbox"> Remember me
              </label>
            </div>
          <% end %>
          <!--<div class="checkbox">-->
            <%= f.submit "Log in", class: "btn btn-primary btn-raised" %>
          <!--</div>-->
        <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>